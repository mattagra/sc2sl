<div id="newsmain">
<% unless current_user %>
<h1>Login</h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <% if @user_session.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
    <% @user_session.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>  
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
  <br />

  <%= link_to "Forgot Password?", new_password_reset_path %>
<% end %>
<% end %>
<% unless current_user and  current_user.connected_with_facebook? %>
<br />
<%= authlogic_facebook_login_button("Connect with facebook", :scope => "email").html_safe %>
<%= fb_connect_async_js %>

<% end %>


  </div>