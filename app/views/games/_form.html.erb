<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :player0_id %><br />
    <%= f.select :player0_id, f.object.match.team0.players.collect {|p| [p.user.login, p.id] } %>
  </div>
  <div class="field">
    <%= f.label :player1_id %><br />
    <%= f.select :player1_id, f.object.match.team1.players.collect {|p| [p.user.login, p.id] } %>
  </div>
  <div class="field">
    <%= f.label :result %><br />
    <%= f.text_field :result %>
  </div>
  <div class="field">
    <%= f.label :downloads %><br />
    <%= f.text_field :downloads %>
  </div>
  <div class="field">
    <%= f.label :map %><br />
    <%= f.select :map_id, Map.all.collect{|m| [m.name, m.id]} %>
  </div>
<% f.label :replay %><br />
<%= f.file_field :replay %>


  <div class="field">
    <%= f.label :match_order %><br />
    <%= f.text_field :match_order %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
