<p id="notice"><%= notice %></p>

<p>
  <b>Player0:</b>
  <%= @game.player0.user.login %>
</p>

<p>
  <b>Player1:</b>
  <%= @game.player1.user.login %>
</p>

<p>
  <b>Result:</b>
  <%= @game.result %>
</p>

<p>
  <b>Replay: </b>
  <%= link_to "Replay", replay_match_game_path(@game.match_id, @game) %>
</p>


<p>
  <b>Downloads:</b>
  <%= @game.downloads %>
</p>

<p>
  <b>Map:</b>
  <%= @game.map.name %>
</p>

<p>
  <b>Match:</b>
  <%= link_to "View Match", match_path(@game.match) %>
</p>

<p>
  <b>Match order:</b>
  <%= @game.match_order %>
</p>
<p>
  <b>Comments:</b>
  <%- @game.comments.each do |comment| %>
    <br />
    <b><%= comment.user.login %> said: </b>
    <br />
    <%= comment.description %>
  <% end %>
</p>

<p>
  <%= render :partial => "comments/form" %>
</p>

<%= link_to 'Destroy', match_game_path(@game.match_id, @game), :method => :delete, :confirm => "Are you sure you wish to delete this game?" %> |
<%= link_to 'Back', match_games_path %>
