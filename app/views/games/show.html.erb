<p id="notice"><%= notice %></p>

<p>
  <b>Player0:</b>
  <%= @game.player0.user.login %>
</p>

<p>
  <b>Player1:</b>
  <%= @game.player1.user.login %>
</p>

<p>
  <b>Result:</b>
  <%= @game.result %>
</p>

<p>
  <b>Replay: </b>
  <%= link_to "Replay", replay_match_game_path(@game.match_id, @game) %>
</p>


<p>
  <b>Downloads:</b>
  <%= @game.downloads %>
</p>

<p>
  <b>Map:</b>
  <%= @game.map.name %>
</p>

<p>
  <b>Match:</b>
  <%= link_to "View Match", match_path(@game.match) %>
</p>

<p>
  <b>Match order:</b>
  <%= @game.match_order %>
</p>

<p>
  <b>Rating</b>
  <%= ratings_for @game %>
</p>

  <h3>Comments: </h3>
  <div id="comments">
    <%= render @game.comments.order('id asc') %>
    <% if @game.comments.size > 0 %>
      <%= render :partial => "comments/comment_footer" %>
    <% end %>
  </div>
  <p>
    <%= render :partial => "comments/form" %>
  </p>

