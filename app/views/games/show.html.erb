<div id="newsmain">					
  <div class="newscontent">

    <div id="titrenews">
      <div id="titrecom">
        <a href="#newcomment"><img src="/css/images/comment/add.png" alt="add a comment"/></a>
      </div>
      <div id=textcom align=right>
        <a href="#comments">2</a>
      </div>
      (p) <a href="#"><%= @game.player0.user.login %></a>  Vs. (z) <a href="#"><%= @game.player1.user.login %></a><br/>
      <div id="undertitle">
        March 25th, 2011 17:40
      </div>
    </div>

    <div align="center">
      <p><%= image_tag @game.map.photo.url(:normal), :border => "1" %>
        <br />	 <%= @game.map.name %> - <%= link_to "Match Sheet", match_path(@game.match) %>
        <br />
        <img src='/css/images/Replay/disk.jpg' align='top' /> <strong><%= link_to "Download", replay_match_game_path(@game.match_id, @game) %> </strong>  (<%= @game.downloads %>) <br  /> <br /><%= ratings_for @game, :remote_options => {:url => rate_replay_path(@game)} %><br/>
        <%=raw @game.formatted_spoiler %><br/>
      </p>
    </div>

  </div>

  <h3>Comments: </h3>
  <div id="comments">
    <%= render @game.comments.order('id asc') %>
    <% if @game.comments.size > 0 %>
      <%= render :partial => "comments/comment_footer" %>
    <% end %>
  </div>
  <p>
    <%= render :partial => "comments/form" %>
  </p>
</div>