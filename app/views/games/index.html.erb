<h1>Listing games</h1>

<table>
  <tr>
    <th>Player0</th>
    <th>Player1</th>
    <th>Result</th>
    <th>Downloads</th>
    <th>Map</th>
    <th>Match</th>
    <th>Match order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.player0_id %></td>
    <td><%= game.player1_id %></td>
    <td><%= game.result %></td>
    <td><%= game.downloads %></td>
    <td><%= game.map %></td>
    <td><%= game.match %></td>
    <td><%= game.match_order %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

