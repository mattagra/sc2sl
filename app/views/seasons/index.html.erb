<h1>Listing seasons</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @seasons.each do |season| %>
  <tr>
    <td><%= season.name %></td>
    <td><%= link_to 'Show', season %></td>
    <td><% if can? :edit, season %><%= link_to 'Edit', edit_season_path(season) %><% end %></td>
    <td><% if can? :destroy, season %><%= link_to 'Destroy', season, :confirm => 'Are you sure?', :method => :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Season %><%= link_to 'New Season', new_season_path %><% end %>
