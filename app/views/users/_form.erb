<b><%= form.label :email %></b><br />
<% if form.object.new_record? or (current_user and current_user.is_admin?) %>
<%=  form.text_field :email %>
<% else %>
<%=  form.object.email %>
<% end  %>
<br />
<b><%= form.label :login %></b><br />
<% if form.object.new_record? or (current_user and current_user.is_admin?) %>
<%=  form.text_field :login %>
<% else %>
<%= form.object.login %>
<% end  %>
<br />
<b><%= form.label :first_name %></b><br />
<%=  form.text_field :first_name %>
<br />
<b><%= form.label :last_name %></b><br />
<%=  form.text_field :last_name %>
<br />
<b><%= form.label :password, form.object.new_record? ? nil : "Change password" %></b><br />
<%= form.password_field :password %><br />
<br />
<b><%= form.label :password_confirmation %></b><br />
<%= form.password_field :password_confirmation %><br />
<br />
<b><%= form.label :birthdate %></b><br />
<%=  form.date_select :birthdate, :start_year => Time.now.year - 100, :end_year => Time.now.year %>
<br />
<b><%= form.label :Country %></b><br />
<%=  form.select :country_id, Country.all.collect {|c| [c.name, c.id]},  { :prompt => true }  %>
<br />

<b><%= form.label :race %></b><br />
<%=  form.select :race, ["protoss", "zerg", "terran", "random"] %>
<br />
<% if current_user and current_user.is_admin? %>
<b><%= form.label :caster %></b><br />
<%= form.check_box :caster %>
<br />
<b><%= form.label :team_name %></b><br />
<%= form.text_field :team_name %>
<br />
<b><%= form.label :website %></b><br />
<%= form.text_field :website %>
<br />
<% end %>
<b><%= form.label :bnet_name %></b><b><%= form.label :bent_code %></b><br />
Name: <%=  form.text_field :bnet_name %> Identifier <%= form.text_field :bent_code %>
<br />
<b><%= form.label :photo %> </b><br />
<%= form.file_field :photo %>
<%= image_tag form.object.avatar  %>
<br />
<b><%= form.label :profile_text %></b><br />
<%=  form.text_area :profile_text %>
<br />
<b><%= form.label :signature %></b><br />
<%=  form.text_field :signature %>
<br />
<% if current_user and current_user.is_super_admin? %>
<br />
<b><%= form.label :permission_level %></b><br />
<%=  form.select :permission_level, User::PERMISSION_LEVELS.collect { |x| [x[1], x[0]]  } %>
<% end %>

<br />