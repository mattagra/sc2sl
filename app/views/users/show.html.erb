<div id="fullpage2">
				<div id="newsmain"><br>
<%= image_tag @user.avatar %>

<%= @user.login %>
<br />
<% if @user == current_user %>
<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>
<% end %>

<p>
  <b>Country:</b>
  <% if @user.country  %>
  <%= @user.country %> <%= image_tag @user.country.flag %>
  <% end %>
</p>

<p>
  <b>Race: </b>
  <%= image_tag race_icon_url(@user.race), :alt => "protoss" %>
</p>
<% if @user == current_user %>

<%= link_to 'Update Information', edit_account_path %>
<% elsif current_user and current_user.is_admin? %>
<%= link_to "Update Information", edit_user_path(@user) %>
<% end %>

<h3>Comments:</h3>
  <%= render  @user.comments.order('id desc') %>
  <%= render :partial => "comments/comment_footer" %>

<p>
  <%= render :partial => "comments/form" %>
</p>

</div>
</div>