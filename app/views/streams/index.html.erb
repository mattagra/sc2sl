<h1>Listing streams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Country</th>
    <th>Description</th>
    <th>User</th>
    <th>Match</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @streams.each do |stream| %>
  <tr>
    <td><%= stream.name %></td>
    <td><%= stream.url %></td>
    <td><%= stream.country %></td>
    <td><%= stream.description %></td>
    <td><%= stream.user %></td>
    <td><%= stream.match %></td>
    <td><%= link_to 'Show', stream %></td>
    <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
    <td><%= link_to 'Destroy', stream, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

