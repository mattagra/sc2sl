<%= form_for(@advertisement, :html => { :multipart => true }) do |f| %>
  <% if @advertisement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@advertisement.errors.count, "error") %> prohibited this advertisement from being saved:</h2>

      <ul>
      <% @advertisement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>
  <div class="field">
    <%= f.label :ad_type %><br />
	<%= f.select :ad_type, Advertisement::AD_TYPES.keys, {:prompt => 'Select Ad Type'} %>
  </div>  
  <div class="field">
    <%= f.label :photo %>570x92 or 120x600
    <%= f.file_field :photo %>
    <br />
    <% if @advertisement.photo.exists? then %>
      <%= image_tag @advertisement.photo.url(@advertisement.ad_type) %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
