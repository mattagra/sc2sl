<h1>Listing advertisements</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Weight</th>
    <th>Photo file name</th>
    <th>Photo content type</th>
    <th>Photo file size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @advertisements.each do |advertisement| %>
  <tr>
    <td><%= advertisement.title %></td>
    <td><%= advertisement.url %></td>
    <td><%= advertisement.weight %></td>
    <td><%= advertisement.photo_file_name %></td>
    <td><%= advertisement.photo_content_type %></td>
    <td><%= advertisement.photo_file_size %></td>
    <td><%= link_to 'Show', advertisement %></td>
    <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
    <td><%= link_to 'Destroy', advertisement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

