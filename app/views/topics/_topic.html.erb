<tr class="topic <%= cycle('odd', 'even') %> <%= topic.locked? ? 'locked' : 'unlocked' %>">
  <td class='icon'>
    <% if topic.locked? %>
      <span class='lock icon'></span>
    <% end %>
    <% if topic.pinned? %>
      <span class='pin icon'></span>
    <% end %>
  </td>
  <td class='byline'>
    <div class='subject'><%= link_to topic.title, forum_topic_path(@forum, topic) %></div>
    <div class='started-by'> Created by <%= topic.posts.by_created_at.first.user %></div>
  </td>
  <td class='latest-post'>
    last post link
  </td>
  <td class='posts-count'><%= topic.posts.count %></td>
  <td class='views-count'><%= topic.views %></td>
</tr>