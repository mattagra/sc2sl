            <%= calendar.head('Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun') %>
            <% calendar.day(:day_method => :scheduled_at) do |date, matches| %>
              <% if date.month == @calendar_date.month %>
                <% if matches.size == 0 %>
                  <%= date.day %>
                <% else %>
                  <% str = "" %>
                  <% id = 0 %>
                  <% for match in matches %>
                    <% str += match.title + "\n" %>
                    <% id = match.id %>
                  <% end %>
                  <%= link_to date.day, match_path(id), :title => str %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
