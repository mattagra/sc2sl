<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>


    <%= javascript_include_tag :defaults %>
    <script type="text/javascript" src="/javascripts/jquery-ui.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.cookie.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />

    <meta name="author" content="p6e" />

    <meta name="robots" content="index, follow" />

    <meta name="googlebot" content="index, follow" />

    <meta name="language" content="english" />

    <!-- STYLES  -->

    <link href="/favicon.gif" rel="shortcut icon" />

    <link href="/css/styles.css" rel="stylesheet" type="text/css"/>
    <link href="/css/smoothness/jquery-ui-1.8.16.custom.css" rel="stylesheet" type="text/css"/>
    <%= ajaxful_rating_style %>

    <!-- JAVASCRIPT  -->

    <%= auto_discovery_link_tag(:rss, "http://localhost:3000/articles.rss") %>
    <script type="text/javascript" src="/js/dddropdownpanel.js"></script>
    <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
    <script type="text/javascript" src="/js/slider.js"></script>
    <script type="text/javascript" src="/js/slider-news.js"></script>
    <script type="text/javascript" src="/js/jquery.placeheld.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.popupwindow.js"></script>
    <script type="text/javascript">
      $(document).ready(function() {
        $("input[placeholder]").placeHeld();
      });

    </script>
    <title><%= (@subpage + " - ") unless @subpage.empty? %><%= (@page + " - ") unless @page.empty? %>SC2SL!</title>
    <meta name="title" content="<%= (@subpage + " - ") unless @subpage.empty? %><%= (@page + " - ") unless @page.empty? %>SC2SL" />

    <meta name="description" content="<%= (@description + " | ") %> <%= (@subpage + " - ") unless @subpage.empty? %><%= (@page + " - ") unless @page.empty? %>SC2SL" />

    <meta name="keywords" content="<%= @keywords.join(", ") %>" lang="en" xml:lang="en" />

  </head>
  <body>
    <div id="global">

      <div id="structure-ombre">

        <div id="structure">
          <div id="structure-login2">

            <div id="login">

              <div id="login-content">

                <div class="login-content-left">

                  <img src="/css/images/login/icones/Login.png" alt="login formulary" align="left" />
                  <% unless current_user %>
                    <div class="login-content-texte">
                      <%= link_to "REGISTER", register_path %> or LOGIN</div>
                    <%= form_for UserSession.new, :url => user_session_path do |f| %>
                      <%= f.text_field :login, :placeholder => "Login", :class => "input-login" %>
                      <%= f.password_field :password, :placeholder => "Password", :class => "input-login" %>
                      <%= f.hidden_field :remember_me, :value => true %>
                      <%= f.submit "OK", :class => "submit-login" %>
                    <% end %>
                  <% else %>
                    <div class="login-content-texte2">
                      Welcome <b><%= current_user.login %></b><br />
                      <%= link_to "My Account", account_path %> |
                      <% if current_user.is_moderator? %>
                        <%= link_to "Advertisements", advertisements_path %> |
                        <%= link_to "Articles", articles_path %> |
                        <%= link_to "Comments", comments_path %> |
                        <%= link_to "Players", players_path %> |
                        <%= link_to "Teams", teams_path %> |
                        <%= link_to "Seasons", seasons_path %> |
                        <%= link_to "Matches", matches_path %> |
                        <%= link_to "Maps", maps_path %> |
                        <%= link_to "Newsletters", newsletters_path %> |
                        <%= link_to "Moderations", moderations_path %> |
                        <%= link_to "Users", users_path %> |
                      <% end %>
                      <%= link_to "Logout", logout_path %>
                    </div>
                  <% end %>

                </div>
                <div class="login-content-right">
                  <a href="http://localhost:3001/articles.rss"><img width="21" height="20" src="/css/images/login/icones/rss.png" alt="RSS" onmouseover="this.src='/css/images/login/icones/rss.gif'" onmouseout="this.src='/css/images/login/icones/rss.png'" /></a>
                  <a href="http://www.youtube.com/SC2SL/"><img width="21" height="20" src="/css/images/login/icones/youtube.png" onmouseover="this.src='/css/images/login/icones/youtube.gif'" onmouseout="this.src='/css/images/login/icones/youtube.png'"  alt="YOUTUBE" /></a>
                  <a href="http://twitter.com/#!/SC2SL"><img width="21" height="20" src="/css/images/login/icones/twitter.png" onmouseover="this.src='/css/images/login/icones/twitter.gif'" onmouseout="this.src='/css/images/login/icones/twitter.png'"  alt="TWITTER" /></a>

                  <a href="http://www.facebook.com/pages/SC2SL/258966677449790"><img width="21" height="20" src="/css/images/login/icones/facebook.png" onmouseover="this.src='/css/images/login/icones/facebook.gif'" onmouseout="this.src='/css/images/login/icones/facebook.png'" alt="FACEBOOK" /></a>

                  <a href="#"><img width="21" height="20" src="/css/images/login/icones/mirc2.png" onmouseover="this.src='/css/images/login/icones/mirc2.gif'" onmouseout="this.src='/css/images/login/icones/mirc2.png'" alt="MIRC" /></a>

                </div>

              </div>

            </div>

          </div>

          <div id="header">

            <div id="header-logo">


              <div id="header-logo">
                <div id="hlogo"><a href="http://www.sc2sl.com"><img src="/css/images/header/logo.png" /></a></div>
              </div>

            </div>

            <div id="header-pub">

              <div id="header-pub-left"></div>

              <div id="header-pub-content"><a href="#"><img src="/css/images/header/pub/logi1.gif" alt="Get the SC2SL discount !" width="570" height="92" /></a></div>

              <div id="header-pub-right"></div>

            </div>

          </div>


          <div id="menu">

            <div id="menu-lien">

              <div class="menu-lien"><a href="/" style="padding-top : 3px;"><img src="/css/images/menu/accueil.png" alt="Retour à l'accueil" /></a></div>

              <div class="menu-separation"></div>

              <div class="menu-lien"><%= link_to "NEWS", articles_path %> </div>

              <div class="menu-separation"></div>
              <% @season = Season.published.last %>
              <div class="menu-lien"><%= link_to "LEAGUE RESULTS", (if @season then season_path(@season) else seasons_path end ) %></div>

              <div class="menu-separation"></div>

              <div class="menu-lien"><%= link_to "REPLAYS", replays_path %> </div>

              <div class="menu-separation"></div>

              <div class="menu-lien"><%= link_to "FAQ", faq_path %> </div>

              <div class="menu-separation"></div>

              <div class="menu-lien"><a href="http://www.youtube.com/sc2sl/" rel="nofollow">VODS</a></div>

              <div class="menu-separation"></div>

              <div class="menu-lien"><a href="/shop/" rel="nofollow">SHOP</a></div>

              <div class="menu-separation"></div>

            </div>

            <div id="menu-live">

              <div class="menu-separation"></div>

              <div class="menu-live-left">NEXT LIVE ON SC2SL</div>

              <div class="menu-live-right"><img src="/css/images/menu/clock.png" alt="NEXT LIVE" valign="absmiddle" /><span style="float : left ;height : 18px; margin-left : 8px; margin-top : 7px;"><%= @live_match.scheduled_at.strftime("%d %b %H:%M").upcase if @live_match  %> </span></div>

            </div>

          </div>

          <div id="content-bar">
            <% if @live_match and @live_match.live %>
              <%= render :partial => "matches/live", :locals => {:live_match => @live_match} %>
            <% else %>
              <div id="slider" class="nivoSlider">
                <%- @articles.each_with_index do |article, i| %>
                  <%= render :partial => "articles/article_banner", :locals => {:article => article, :i => i} %>
                <% end %>
              </div>
            <% end %>


            <div id="live">

              <div id="live-haut">

                <div id="live-haut-status">

                  <% if @live_match and @live_match.live %>
                    <div id="live-haut-status-image"><img src="/css/images/content-bar/live/live.jpg" alt="Live" /></div>
                    <div id="live-haut-status-texte">LIVE IS ONLINE</div>
                  <% else %>
                    <div id="live-haut-status-image"><img src="/css/images/content-bar/live/offline.jpg" alt="Offline" /></div>
                    <div id="live-haut-status-texte">LIVE IS OFFLINE</div>
                  <% end %>

                </div>

                <div id="live-haut-separation"></div>

                <div id="live-haut-infos">

                  <div id="live-haut-infos-competition">Week <%= @live_match.weeks_id if @live_match %></div>

                  <div id="live-haut-infos-team"><%= @live_match.title if @live_match  %></div>

                </div>

              </div>

              <div id="live-ligne">
                <div id="live-ligne-left" align="left">Commentated by</div>

                <div id="live-ligne-right">
                  <% if @live_match %>
                    <% @live_match.casters.each do |caster| %>
                      <%= link_to caster, profile_path(caster.login) %>&nbsp;
                    <% end %>
                  <% end %>
                </div>

              </div>

            </div>


            <div id="head-sponsors"><div id="hsst"><div id="hsstt">NEXT MATCHES - CET</div>
              </div>
              <div id="hsm">
                <% @upcoming_matches.each do |match| %>
                  <img src="/css/images/content-bar/sponsors/fleche.gif" alt="" /><%= american_time(match.scheduled_at, false) %> - <%= image_tag match.team0.country.flag %> <%= link_to match.team0.short_name, match_path(match) %> vs <%= image_tag match.team1.country.flag %> <%= link_to match.team1.short_name, match_path(match) %> <br/>
                <% end %>
              </div>

              <div id="hss"><a href="#"><img src="/css/images/content-bar/sponsors/pubKorea.png" border="0" /></a></div>

              <div id="hss"><a href="#"><img src="/css/images/content-bar/sponsors/pubKorea.png" border="0" /></a></div>

            </div>

          </div>

        </div>
        <div id="structure-sponsors2">
          <table width="1004" height="94" border="0" cellspacing="0" cellpadding="0">
            <tr valign="middle" align="center">
              <% @advertisements_show.each do |advertisement| %>
                <td>
                  <a href="<%= advertisement.url %>">
                    <%= image_tag advertisement.photo.url(:normal_gray), :alt => advertisement.title, :border => "0", :onmouseover => "this.src='#{advertisement.photo.url(:normal)}'", :onmouseout => "this.src='#{advertisement.photo.url(:normal_gray)}'" %>
                  </a>
                </td>
              <% end %>
            </tr>
          </table>
        </div>


        <div id="structure">
          <div id="fullpage">
            <% flash.each do |key, msg| %>
              <%= content_tag :div, msg, :class => ["flash_#{key}"], :id => "notice_#{key}" %>
            <% end %>
            <%= yield %>


          </div>
          <div id="right">

            <div id="advertissement">
              <div id="right-titre">

                <div id="right-titre-texte">ADVERTISEMENT</div>
              </div>

              <div id="advertissement-image"><a href="#"><img src="/css/images/header/pub/logi2.gif" alt="logitech offer for starcraft fans!" width="120" height="600" /></a></div>

            </div>
          </div>
        </div>

        <div id="footer">

          <div id="footer-menu">

            <div id="menu-lien" style="width : 1000px;">

              <div class="menu-lien"><%= link_to "NEWS", articles_path %></div>

              <div class="menu-lien"><%= link_to "LEAGUE", seasons_path %></div>

              <div class="menu-lien"><%= link_to "REPLAYS", replays_path %></div>

              <div class="menu-lien"><a href="#">VODS</a></div>

              <div class="menu-lien"><a href="#">BETS</a></div>

              <div class="menu-lien"><a href="#">FAQ</a></div>
              <div class="menu-lien"><a href="#">GET SPECIAL OFFERS WITH LOGITECH</a></div>
              <div class="menu-lien"><a href="#">WANT TO SEE THE GSL FINALS?</a></div>
              <div class="menu-lien"><a href="mailto:contact@sc2sl.com">CONTACT</a></div>
              <div class="menu-lien" style="float : right;"><a href="#" style="padding-top : 3px;"><img src="/css/images/menu/accueil.png" alt="Retour à l'accueil" /></a></div>

            </div>

          </div>

          <div id="footer-content">

            <div id="footer-left">
              <p>SC2SL Copyright © 2011 / ALL RIGHTS RESERVED<br />
                website created by P6E - names and graphics are the property of their respective publishers and studios

                All other copyrights or trademarks are the property of their respective owners.

                SIRET n°xxx - xxx - xxx - xxx </p>
            </div>

            <div id="footer-right">
              <div class="footer-right-image"><a href="http://www.p6e.org"><span class="footer-right-image"><img src="/css/images/footer/p6e.png" alt="p6e"/></span></a></div>

            </div>

          </div>

        </div>

      </div>

    </div>
  </body>

</html>
