<!DOCTYPE html>
<html>
  <head>
    <title>Sc2sl</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <!-- Place this tag in your head or just before your close body tag -->
    <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
  </head>
  <body>
    <% unless current_user %>
      <% form_for UserSession.new, :url => user_session_path do |f| %>
        <%= link_to "REGISTER", register_path %> or Login
        <%= f.text_field :login, :placeholder => "Login" %>
        <%= f.password_field :password, :placeholder => "Password" %>
        <%= f.check_box :remember_me %><%= f.label :remember_me %>
        <%= f.submit "LOGIN" %>
      <% end %>
    <% else %>
      Welcome, <%= current_user.login %> |
      <%= link_to "My Account", account_path %>
      <%= link_to "Logout", logout_path %>
    <% end %>
    <br />
    <%= link_to "HOME", root_path %>
    <%= link_to "NEWS", articles_path %>
    <%= link_to "REPLAYS", games_path %>
    <%= link_to "INFORMATION" %>
    <br />
    <%= yield %>

  </body>
</html>
